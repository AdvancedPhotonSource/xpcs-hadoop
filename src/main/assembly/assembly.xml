<assembly>
  <id>all</id>
  <formats>
    <format>jar</format>
  </formats>
 
  <includeBaseDirectory>false</includeBaseDirectory>
 
  <dependencySets>
    <!-- One Jar classloader itself -->
    <dependencySet>
        <outputDirectory/>
        <unpack>true</unpack>
        <useProjectArtifact>true</useProjectArtifact>
        <includes>
            <include>org.apache.hadoop:hadoop-core</include>
            <include>org.apache.hadoop:hadoop-common</include>
            <include>commons-lang:commons-lang</include>
            <include>org.hdfgroup:hdf-java</include>
            <include>org.hdfgroup:h5obj</include>
            <include>org.hdfgroup:hdfobj</include>
            <include>${groupId}:${artifactId}</include>
        </includes>
   </dependencySet>
  </dependencySets>
</assembly>
